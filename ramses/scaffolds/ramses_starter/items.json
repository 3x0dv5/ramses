{
    "type": "object",
    "title": "Item schema",
    "$schema": "http://json-schema.org/draft-04/schema",
    "required": ["id", "name"],
    "properties": {
        "id": {
            "type": ["integer", "null"],
            "_db_settings": {
                "_required": true,
                "_type": "id_field",
                "_primary_key": true
            }
        },
        "name": {
            "type": "string",
            "_db_settings": {
                "_type": "string",
                "_required": true
            }
        },
        "description": {
            "type": ["string", "null"],
            "_db_settings": {
                "_type": "text",
                "_required": false
            }
        }
    }
}